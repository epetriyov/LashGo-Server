    <mvc:interceptors>
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <mvc:exclude-mapping path="/css/**"/>
            <mvc:exclude-mapping path="/fonts/**"/>
            <mvc:exclude-mapping path="/img/**"/>
            <mvc:exclude-mapping path="/js/**"/>
            <mvc:exclude-mapping path="/pict/**"/>
            <bean class="main.java.com.check.rest.controller.CheckInterceptor"/>
        </mvc:interceptor>
    </mvc:interceptors>

    <bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean"/>

    <bean id="restTemplate" class="org.springframework.web.client.RestTemplate">
        <property name="messageConverters">
            <list>
                <bean class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
                    <property name="objectMapper" ref="objectMapper"/>
                </bean>
            </list>
        </property>
        <property name="interceptors">
            <bean class="main.java.com.check.gcm.LoggingInterceptor"/>
        </property>
        <property name="requestFactory">
            <bean class="main.java.com.check.gcm.CustomClientHttpRequestFactory"/>
        </property>
    </bean>
</beans>